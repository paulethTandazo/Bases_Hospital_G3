<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="539.0" prefWidth="314.0" spacing="10" style="-fx-background-color: FFFF;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espol.edu.ec.hospital.TipoUsuarioController">
   <children>
      <VBox alignment="CENTER" prefHeight="25.0" prefWidth="314.0">
         <children>
            <Label prefHeight="63.0" prefWidth="184.0" text="Seleccionar Usuario" textFill="#2da1e0">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="11.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" prefHeight="210.0" prefWidth="314.0">
         <children>
            <Button fx:id="BotonDoctor" mnemonicParsing="false" onAction="#handleDoctorLogin" style="-fx-background-color: FFFF;">
               <graphic>
                  <ImageView fitHeight="159.0" fitWidth="175.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../Imagenes/Imagen2Login.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Doctor" textFill="#2da1e0">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="BotonPaciente" mnemonicParsing="false" onAction="#handlePacienteLogin" style="-fx-background-color: FFFF;" textFill="WHITE">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../Imagenes/ImagenLogin.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Paciente" textFill="#2da1e0">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </children>
</VBox>
